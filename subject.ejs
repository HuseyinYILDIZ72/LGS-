<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= subject %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="subject-container">
        <h1><%= subject %></h1>
        <h2>Notes</h2>
        <ul>
            <% notes.forEach(note => { %>
                <li><%= note.content %></li>
            <% }) %>
        </ul>
        <form action="/subjects/<%= subject %>/notes" method="post" enctype="multipart/form-data">
            <input type="file" name="file">
            <button type="submit">Upload Note</button>
        </form>
        <h2>Videos</h2>
        <ul>
            <% videos.forEach(video => { %>
                <li><a href="<%= video.url %>" target="_blank"><%= video.url %></a></li>
            <% }) %>
        </ul>
        <form action="/subjects/<%= subject %>/videos" method="post">
            <input type="text" name="url" placeholder="Video URL" required>
            <button type="submit">Add Video</button>
        </form>
    </div>
</body>
</html>